{
  "name": "@omicronenergy/oscd-menu-open",
  "version": "1.0.0",
  "description": "OpenSCD Menu Plugin for loading IEC 61850 SCL files into OpenSCD.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": "./dist/oscd-menu-open.js"
  },
  "scripts": {
    "lint": "eslint .",
    "format": "eslint . --fix",
    "analyze": "cem analyze --litelement",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"web-dev-server\"",
    "build": "tsc && npm run analyze -- --exclude dist",
    "prepublish": "tsc && npm run analyze -- --exclude dist",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OMICRONEnergyOSS/oscd-menu-open.git"
  },
  "bugs": {
    "url": "https://github.com/OMICRONEnergyOSS/oscd-menu-open/issues"
  },
  "homepage": "https://openscd.org",
  "keywords": [
    "OpenSCD",
    "iec81650"
  ],
  "author": "OMICRON Electronics GmbH",
  "license": "Apache-2.0",
  "files": [
    "**/*.js",
    "**/*.js.map",
    "**/*.d.ts",
    "!**/*.spec.*",
    "!commitlint.config.js",
    "!coverage",
    "!doc"
  ],
  "dependencies": {
    "@omicronenergy/oscd-api": "^0.1.0",
    "@omicronenergy/oscd-shell": "file:../oscd-shell",
    "lit": "^3.3.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@custom-elements-manifest/analyzer": "^0.10.4",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.29.0",
    "@open-wc/eslint-config": "^13.0.0",
    "@open-wc/testing": "4.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@web/dev-server": "^0.4.6",
    "@web/test-runner": "0.20.2",
    "concurrently": "^9.2.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-lit-a11y": "^5.0.1",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-wc": "^3.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.0",
    "rimraf": "^6.0.1",
    "typedoc": "^0.28.5",
    "typescript": "^5.8.3"
  },
  "customElements": "custom-elements.json",
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "eslint"
    ]
  }
}
